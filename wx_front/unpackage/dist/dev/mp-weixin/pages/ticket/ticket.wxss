
.attraction {
	height: 95%;
}
.info {
	display: flex;
	margin-top: 5px;
}
.main-info {
	display: flex;
	flex-direction: column;
}
.image-info {
	margin-right: 10px;
}
.image-info image {
	width: 100px;
	height: 100px;
	border-radius: 5px;
}
.category-info {
	margin-left: 10px;
}
.add-info {
	margin-top: 10px;
	font-size: 12px;
}
.sell-info {
	margin-top: auto;
	color: #959595;
	font-size: 12px;
	display: flex;
	justify-content: space-between;
	width: 250px;
}
.fee-info {
	display: flex;
	align-items: flex-end;
	color: #06dcad;
}
.rmb {
	width: 18px;
	height: 18px;
}


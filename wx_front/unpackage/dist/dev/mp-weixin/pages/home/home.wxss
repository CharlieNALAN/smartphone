.category {
	margin: 20rpx 0 20rpx;
	padding: 10rpx 0;
	display: flex;
	flex-direction: row;
	justify-content: center;
	flex-wrap: wrap;
	min-height: 128rpx;
}
.category-item {
	width: 160rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
	margin: 5rpx 8rpx 0;
}
.icon {
	width: 90rpx;
	height: 90rpx;
	margin-bottom: 15rpx;
}
.text {
	font-size: 26rpx;
	color: #666;
}
.futitle {
	background-color: aquamarine;
}
.title-more {
	display: flex;
	flex-direction: row;
	justify-content: center;
}
.container {
	width: 100%;
	/* 根据需求调整容器宽度 */
	overflow: hidden;
}
.hot-image {
	display: inline-block;
	padding: 5px;
	margin-right: 10px;
}

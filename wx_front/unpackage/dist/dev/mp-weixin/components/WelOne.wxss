
.container {
	width: 100%;
}
.txt1 {
	margin-top: 10px;
	display: flex;
	justify-content: center;
	/* 水平居中 */
	align-items: center;
	/* 垂直居中 */
	height: 20px;
	font-size: 14px;
}
.choose_scenic {
	position: absolute;
	left: 50%;
	bottom: 20%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	background-color: rgba(123, 123, 123, 0.5);
	width: 200px;
	height: 300px;
	border-radius: 20px;
}
.scenic_pick {
	margin-top: 5px;
	position: absolute;
	top: 45%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	width: 130px;
	height: 200px;
}
.go_home {
	margin-top: 200px;
	width: 60%;
	background: linear-gradient(to right, #5ac7d1, #60e1c1);
}


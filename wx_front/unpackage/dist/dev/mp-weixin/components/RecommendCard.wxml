<swiper class="cards-swiper" circular="{{true}}" previous-margin="50rpx" next-margin="50rpx" data-event-opts="{{[['change',[['handleSwiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{recommend_datas}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item class="card-item"><view class="{{['attraction-card',(currentIndex===index)?'card-active':'']}}"><image class="card-image" src="{{'http://localhost:8000/'+item.image}}" mode="aspectFill"></image><view class="card-content"><view class="location-tag">{{item.scenic_name||''}}</view><view class="attraction-name">{{item.attraction_name}}</view><view class="rating-row"><view class="rating"><uni-icons vue-id="{{'2cfa2a85-1-'+index}}" type="star-filled" size="14" color="#ffc107" bind:__l="__l"></uni-icons><text>{{item.rating||'4.8'}}</text></view><text class="reviews">{{(item.reviews||'100')+" reviews"}}</text></view><view data-event-opts="{{[['tap',[['to_detail',['$0'],[[['recommend_datas','',index]]]]]]]}}" class="see-more-btn" bindtap="__e"><text>See more</text><uni-icons vue-id="{{'2cfa2a85-2-'+index}}" type="right" size="14" color="#ffffff" bind:__l="__l"></uni-icons></view></view><view data-event-opts="{{[['tap',[['toggleFavorite',[index]]]]]}}" class="card-favorite" bindtap="__e"><uni-icons vue-id="{{'2cfa2a85-3-'+index}}" type="{{item.isFavorite?'heart-filled':'heart'}}" size="24" color="#ffffff" bind:__l="__l"></uni-icons></view></view></swiper-item></block></swiper>